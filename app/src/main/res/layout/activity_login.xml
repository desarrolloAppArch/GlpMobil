<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvRegistrarse"
        android:layout_width="wrap_content"
        style="@style/altosEnlaces"
        android:text="Registrarse"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="90dp"
        android:padding="10dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/tvSalirLogin"
        android:layout_width="wrap_content"
        style="@style/altosEnlaces"
        android:text="Salir"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:padding="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:text="Usuario:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <AutoCompleteTextView
                android:id="@+id/autoTvUsuario"
                android:layout_width="match_parent"
                style="@style/altosEnlaces"
                android:completionThreshold="1"
                android:ems="10"
                android:inputType="textCapCharacters"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:contentDescription="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clave: "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                 />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etClave"
                    android:layout_width="match_parent"
                    style="@style/altosEnlaces"
                    android:width="48dp"
                    android:inputType="textPassword"
                    android:maxWidth="48dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:hint=""
                    />
            </android.support.design.widget.TextInputLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/button"
                android:layout_width="170dp"
                style="@style/botones"
                android:layout_marginTop="15dp"
                android:onClick="ingresar"
                android:text="ACEPTAR" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvOlvidoClave"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/altoEnlaces"
                style="@style/altosEnlaces"
                android:gravity="center"
                android:text="OlvidÃ³ su clave!"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"

                app:autoSizeStepGranularity="48dp" />
        </TableRow>

    </TableLayout>



    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <fragment
            android:id="@+id/fragment_pie_registro1"
            android:layout_width="match_parent"
            android:layout_gravity="bottom|end"
            style="@style/pie"
            android:name="ec.gob.arch.glpmobil.activities.PieFragment"
            xmlns:tools="http://schemas.android.com/tools"
            tools:layout="@layout/fragment_pie">
        </fragment>

    </FrameLayout>


</RelativeLayout>