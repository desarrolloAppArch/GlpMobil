<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VentaFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btnEscanearFragment"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:text="ESCANEAR"
                    android:textAppearance="@android:style/TextAppearance.Large"/>

                <Button
                    android:id="@+id/btnDigitarFragment"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:text="DIGITAR"
                    android:textAppearance="@android:style/TextAppearance.Holo.Large"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identificación:"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

                <TextView
                    android:id="@+id/tvCodigoLeidoFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                <EditText
                    android:id="@+id/etCodigoLeidoFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="9"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </TableRow>


        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de expedición"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(aaaammdd): "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <EditText
                android:id="@+id/etFechaExpedicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/btnBuscarFragment"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:text="BUSCAR"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        </TableRow>

        </TableLayout>




    </LinearLayout>





</FrameLayout>